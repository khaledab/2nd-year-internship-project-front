                android:fontFamily="@font/lato"
                android:text="phone"
                android:textColor="#000000"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
